
<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to image_tag(@brewery.image, :border=>0), @brewery.website %><br>
    <h2>Brew Listing</h2>
  </div>

  <ul class="list-group">
    <% @brewery.brews.each do |brew| %>
        <li class="list-group-item">
          <%= link_to brew.name + ' | ' + brew.brew_type + ' | ' + brew.abv,
                      new_brewery_brew_rating_path(brew.brewery_id, brew.id),
                      class: 'panel-content' %>
        </li>

    <% end %>
  </ul>
</div>
